{
    "name": "articlesapp/ci-demo",
    "description": "Articles Application with Docker CI/CD Pipeline",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13",
        "sebastian/phpcpd": "^6.0",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "ArticlesApp\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArticlesApp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "lint": "phpcs --standard=PSR12 app/ tests/",
        "lint-fix": "phpcbf --standard=PSR12 app/ tests/",
        "analyse": "phpstan analyse app --level=5",
        "mess": "phpmd app text cleancode,codesize,design,naming,unusedcode",
        "cpd": "phpcpd app",
        "check": ["@lint", "@analyse", "@mess", "@cpd", "@test"],
        "ci": ["@lint", "@analyse", "@test"]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}